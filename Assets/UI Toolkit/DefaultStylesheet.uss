Label {
    color: white;
    font-size: 20px;
}

Button {
    font-size: 20px;
    height: 40px;
}

.unity-scroll-view {
    background-color: darkslategrey;
    min-width: 200px;
}

PopupTextElement {
    color: white;
    font-size: 20px;
}

DropdownField {
    height: 50px;
    border-radius: 12px;
    max-width: 400px;
}

DropdownField .unity-base-field__input {
    background-color: darkslategrey;
    border-radius: 12px;
}

.map-type-selector.unity-base-field:hover > .unity-base-field__input {
    background-image: none;
    background-color: goldenrod;
}

unity-popup-menu__item:hover {
    background-image: none;
    background-color: goldenrod;
}

.spacer {
    min-height: 12px;
    min-width: 12px;
}

.unity-button {
    background-color: #454545;
    border-width: 1px;
    border-color: transparent;
    color: white;
}

Button.unity-button:hover:enabled {
    background-color: goldenrod;
}

Button.unity-button:focus:enabled {
    border-color: goldenrod;
}

Button.unity-button:checked {
    background-color: darkslategrey;
    border-color: goldenrod;
    border-width: 2px;
}

.exit-button {
    background-color: coral;
    color: black;
    -unity-font-style: bold;
    border-radius: 6px;
}

.unity-toggle-button-group {
    align-items: flex-start;
    flex-direction: column;
    flex-grow: 1;
    margin: 0;
}

.unity-button-group {
    flex-direction: row;
    flex-grow: 1;
    flex-wrap: wrap;
}

.unity-button-group__button {
    flex-grow: 1;
    margin-right: 2px;
    max-width: 64px;
    max-height: 64px;
    width: 64px;
    height: 64px;
}

Slider {
    min-width: 200px;
}

SliderInt {
    min-width: 150px;
}
.unity-base-slider__label {
    -unity-text-align: middle-right;
    min-width: 50px;
}

#unity-dragger {
    background-color: cadetblue;
    border-radius: 12px;
    height: 24px;
    width: 24px;
}

#unity-tracker {
    background-color: black;
}